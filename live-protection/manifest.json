{
  "manifest_version": 2,
  "name": "live-protection",
  "version": "1.0",

  "description": "Protects you from malicious websites",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab",
	"tabs",
	"*://www.virustotal.com/*"
  ],

  "browser_action": {
	  "default_icon": "icons/beasts-32.png",
	  "default_title": "Live Protection",
	  "default_popup": "modules/home.html"
  }

}
